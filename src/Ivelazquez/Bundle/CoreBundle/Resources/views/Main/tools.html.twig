{% for chunks in tools %}
    <div class="row-fluid">
        {% for tool in chunks %}
            {% set url = (tool.route is defined) ? path(tool.route) : 'http://'~tool.url %}
            <div class="span2">
                <a class="thumbnail admin-module" target="_blank" href="{{ url }}">
                    <div class="caption">
                        <div class="admin-img-fixed-container">
                            <img src="{{ asset(tool.icon) }}" alt="">
                        </div>
                    </div>
                    <h4 class="admin-text-centered">{{ tool.name }}</h4>
                </a>
            </div>
        {% endfor %}
    </div>
{% endfor %}
